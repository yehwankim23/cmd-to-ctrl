#Requires AutoHotkey v2.0
#SingleInstance Force

A_IconTip := "CmdToCtrl 2024.11"

; Win + a
#a:: {
    Send "^a"
}

; Win + c
#c:: {
    Send "^c"
}

; Win + s
#s:: {
    Send "^s"
}

; Win + v
#v:: {
    Send "^v"
}

; Win + x
#x:: {
    Send "^x"
}

; Win + y
#y:: {
    Send "^y"
}

; Win + z
#z:: {
    Send "^z"
}

; Win + Shift + z
#+z:: {
    Send "^+z"
}

; Win + /
#/:: {
    Send "^/"
}
